rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create and manage athletes where they are the parent
    match /athletes/{athleteId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.parentUserId == request.auth.uid);
    }
    
    // Allow reading and writing workout templates (adjust as needed)
    match /workoutTemplates/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}